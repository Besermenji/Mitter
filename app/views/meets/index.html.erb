<%= render 'form' %>

<br>
<table>
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meets.each do |meet| %>
      <tr>
	      <td><strong><%= link_to meet.user.name, profile_path(meet.user) %>(<%= meet.user.mentions_count%>):</strong></td>
	<td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
      <tr>
         <td>&nbsp;</td>
        <td><%= meet.content %></td>
         <td>&nbsp;</td>
	<% if meet.user.id == current_user.id %>	
          <td><%= link_to 'Edit', edit_meet_path(meet) %></td>
          <td><%= link_to 'Destroy', meet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


